    function apply_new_input() {
        if (flag == 0) {  //meaning the text area doesn't exist yet but to be improved @Dorian
            document.getElementById('application_area').innerHTML = '<form method="POST" action="/projects/' + '<%= project.name %>/application">' + '</br> <textarea input type="text" id="application" name=application style="width:300px; height:120px"> </textarea> </br>' +
                '<button name="apply" value="member">Join the project</button> </form>';
            flag = 1
        }
    }

</script>


</html>